<UserControl x:Class="groenteBoer.ucBon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:groenteBoer"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" x:Name="ucProductImg"></Image>
        
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" x:Name="ucProductName" Content="test name" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Padding="0"/>
            <Label Grid.Column="1" x:Name="ucProductPrice" Content="1.23" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Padding="0"/>

        </Grid>
        
        <Label Grid.Column="2" x:Name="ucProductAmount" Content="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Padding="0"/>


    </Grid>
</UserControl>
